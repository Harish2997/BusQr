<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DropActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <TextView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_below="@+id/toolbar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logobus"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img"
        android:id="@+id/showBus"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/start"
        android:layout_marginLeft="30dp"
        android:text="Source"
        android:layout_below="@+id/showBus"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/drop1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@drawable/shape"
        android:textStyle="bold"
        android:layout_below="@+id/start"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/drop"
        android:layout_marginLeft="30dp"
        android:text="Destination"
        android:layout_below="@+id/drop1"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/drop2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/drop"
        android:textColor="#000000"
        android:fontFamily="sans-serif-smallcaps"
        android:background="@drawable/shape"
        android:textStyle="bold"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <Button
        android:id="@+id/buttonPay"
        android:layout_width="130dp"
        android:layout_marginTop="10dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/drop2"
        android:background="@drawable/paytm"
        />

</RelativeLayout>